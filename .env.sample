# Server Configuration
PORT=8787
CORS_ORIGIN=*
DATA_DIR=./data

# Canva App Configuration
CANVA_APP_ID=your_app_id_here
CANVA_APP_ORIGIN=https://app-yourappid.canva-apps.com
CANVA_HMR_ENABLED=TRUE

# Canva Connect API OAuth Credentials
# Get these from https://www.canva.com/developers/apps
CANVA_CLIENT_ID=your_client_id_here
CANVA_CLIENT_SECRET=your_client_secret_here
CANVA_REDIRECT_URI=http://localhost:8787/auth/callback

# Security
# Generate a random 32+ character string for session secret
SESSION_SECRET=change-me-in-production-use-random-string
# Generate a 32-character string for token encryption
TOKEN_ENCRYPTION_KEY=change-me-in-production-32chars
# Admin token for accessing admin endpoints
ADMIN_TOKEN=change-me-in-production

# Optional: Canva API Base URL (defaults to https://api.canva.com/rest/v1)
# CANVA_API_BASE_URL=https://api.canva.com/rest/v1
